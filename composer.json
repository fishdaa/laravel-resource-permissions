{
    "name": "fishdaa/laravel-resource-permissions",
    "description": "Extend Spatie Laravel Permission with resource-based permissions and roles",
    "keywords": [
        "laravel",
        "permissions",
        "roles",
        "spatie",
        "resource-permissions",
        "polymorphic-permissions"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "fishdaa",
            "email": "git@fishda.net"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/contracts": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "spatie/laravel-permission": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.0|^10.0|^11.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "github-protocols": ["https"]
    },
    "autoload": {
        "psr-4": {
            "Fishdaa\\LaravelResourcePermissions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fishdaa\\LaravelResourcePermissions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fishdaa\\LaravelResourcePermissions\\LaravelResourcePermissionsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
